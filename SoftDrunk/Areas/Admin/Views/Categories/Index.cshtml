@model IEnumerable<SoftDrunk.Models.Category>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create", new { @class = "btn btn-success" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CategoryName)
        </th>
        <th>
            Quantity
        </th>
        <th>
            Action
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CategoryName)
        </td>
        <td>
            @item.Products.Count()
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.CategoryID }, new { @class = "btn btn-info" }) |
            @Html.ActionLink("Details", "Details", new { id = item.CategoryID }, new { @class = "btn btn-success" }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.CategoryID }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
